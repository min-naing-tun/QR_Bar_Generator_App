@using QR_Bar_Generator_App.Models.ViewModels;
@model QR_Bar_Generator_App.Models.ViewModels.InputFormViewModel;


@{
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h4 class="mb-4 text-center">QR or BAR Generator</h4>
                    <form method="post" autocomplete="off">
                        <div class="mb-3">
                            <label for="codeType" class="form-label">Type</label>
                            <select class="form-select" id="codeType" name="codeType" asp-for="codeType" asp-items="Html.GetEnumSelectList<CodeType>()" required></select>
                        </div>
                        <div class="mb-3">
                            <label for="inputData" class="form-label">Input data</label>
                            <textarea class="form-control" rows="5" id="inputData" placeholder="Enter your data" asp-for="inputData" required></textarea>
                        </div>
                        <div class="mb-4">
                            @{
                                if (Model != null)
                                {
                                    <label for="qrImage" class="form-label">Generated Image</label>
                            
                                    <br />
                                    <div class="d-flex align-items-center gap-3">
                                        <img src="@Model.imageData" alt="Generated code" style="max-width:100px; border:1px solid #ddd; padding:4px;" />
                                        <br />
                                        <a href="@Model.imageData" download="@Model.codeType.ToString()!.ToUpper() _ @DateTime.Now.ToString() .png" class="btn btn-success">
                                            Download
                                        </a>
                                    </div>
                                }
                            }
                        </div>
                        <div style="justify-items: center;">
                            <hr class="w-100" />
                        </div>
                        <div class="d-grid mt-4" style="justify-items: center;">
                            <button id="subBtn" style="justify-self: center; width: 50%;" onclick="generate()"
                                    type="submit"
                                    class="btn btn-primary btn-lg">
                                Generate
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>