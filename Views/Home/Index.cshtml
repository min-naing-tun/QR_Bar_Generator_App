@{
    ViewBag.Title = "QR or BAR Generator";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h4 class="mb-4 text-center">@ViewBag.Title</h4>
                    <form method="post" autocomplete="off">
                        <div class="mb-3">
                            <label for="codeType" class="form-label">Type</label>
                            <select class="form-select" id="codeType" name="codeType" required>
                                <option value="QR">QR</option>
                                <option value="Bar">Bar</option>
                            </select>
                        </div>
                        <div class="mb-5">
                            <label for="inputData" class="form-label">Input data</label>
                            <input type="text-area" class="form-control" id="inputData" name="inputData" placeholder="Enter your data" required>
                        </div>
                        <div style="justify-items: center;">
                            <hr class="w-50" />
                        </div>
                        <div class="d-grid mt-5" style="justify-items: center;">
                            <button style="width: 50%;" type="submit" class="btn btn-primary btn-lg">Generate</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>